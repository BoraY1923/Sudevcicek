---
const { title, subtitle } = Astro.props;
---

<header class="page-header">
  <h1 class="title">SÃœDEV</h1>
   <span class="divider"></span>
  <p class="subtitle">DEVFEST 2025</p>
</header>

<style>
     .page-header {
    margin-bottom: 2rem;
    
    text-align: center;

    animation: fadeUp 0.8s ease-out forwards;

     margin-bottom: 3rem;
  }

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(8px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


  h1 {
    font-size: 2.5rem;
    margin: 0;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  background: linear-gradient(
        to right,
        #dba905 20%,
        #c4fa00 30%,
        #0312e7 70%,
        #0050fc 80%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-fill-color: transparent;
    background-size: 500% auto;
    

    text-align: center;

     letter-spacing: 0.12em;
  font-weight: 800;

     margin-bottom: 0.3rem;

       background-size: 300% auto;
  animation: textShine 6s cubic-bezier(0.4, 0, 0.2, 1) infinite;
}

@keyframes textShine {
    0% {
        background-position: 0% 50%;
    }
    100% {
        background-position: 100% 50%;
    }
}


  p {
    margin: 0.5rem 0 0;
    font-size: 1.2rem;
    opacity: 0.7;

    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    

     background: linear-gradient(
        to right,
        #05df22 70%,
        #04cf7a 80%
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-fill-color: transparent;
    background-size: 500% auto;
     animation: textShine 15s linear infinite;

    text-align: center;

    animation: textShine 8s ease-in-out infinite alternate;
  animation-delay: 1.5s;

   letter-spacing: 0.35em;
  font-weight: 500;

  margin-top: 0;
  }


  .divider {
  display: block;
  width: 3rem;
  height: 2px;
  margin: 0.6rem auto;
  background: linear-gradient(to right, #c4fa00, #0312e7);
  opacity: 0.6;
}

</style>