        transform: translateX(-50%) translate(12px, 0) rotate(8deg) translateY(50px) scale(0.3);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) translate(12px, 0) rotate(8deg) translateY(0) scale(1);
    }
}

@keyframes branchSwayRight1 {
    0%, 100% { transform: translateX(-50%) translate(12px, 0) rotate(8deg); }
    25% { transform: translateX(-50%) translate(12px, 0) rotate(8.5deg); }
    75% { transform: translateX(-50%) translate(12px, 0) rotate(7.5deg); }
}

/* Right Middle Branch */
.branch-right-middle {
    transform: translateX(-50%) translate(24px, 0) rotate(15deg);
    z-index: 2;
    bottom: 200px;
    height: 480px;
    animation: branchAppearRight2 1.5s ease-out 0.35s forwards,
               branchSwayRight2 4s ease-in-out 2.35s infinite;
}

@keyframes branchAppearRight2 {
    0% {
        opacity: 0;
        transform: translateX(-50%) translate(24px, 0) rotate(15deg) translateY(50px) scale(0.3);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) translate(24px, 0) rotate(15deg) translateY(0) scale(1);
    }
}

@keyframes branchSwayRight2 {
    0%, 100% { transform: translateX(-50%) translate(24px, 0) rotate(15deg); }
    25% { transform: translateX(-50%) translate(24px, 0) rotate(15.5deg); }
    75% { transform: translateX(-50%) translate(24px, 0) rotate(14.5deg); }
}

/* Right Outer Branch */
.branch-right-outer {
    transform: translateX(-50%) translate(38px, 0) rotate(22deg);
    z-index: 1;
    bottom: 200px;
    height: 430px;
    animation: branchAppearRight3 1.5s ease-out 0.45s forwards,
               branchSwayRight3 4s ease-in-out 2.45s infinite;
}

@keyframes branchAppearRight3 {
    0% {
        opacity: 0;
        transform: translateX(-50%) translate(38px, 0) rotate(22deg) translateY(50px) scale(0.3);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) translate(38px, 0) rotate(22deg) translateY(0) scale(1);
    }
}

@keyframes branchSwayRight3 {
    0%, 100% { transform: translateX(-50%) translate(38px, 0) rotate(22deg); }
    25% { transform: translateX(-50%) translate(38px, 0) rotate(22.5deg); }
    75% { transform: translateX(-50%) translate(38px, 0) rotate(21.5deg); }
}

/* Main Stem (Center) */
.stem-main {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 3px;
    height: 100%;
    background: linear-gradient(to right, #1a2e1a, #2a402a, #1a2e1a);
    border-radius: 2px;
    transform: translateX(-50%);
    z-index: 1;
}

/* Side Stems */
.stem-side {
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 2.5px;
    height: 100%;
    background: linear-gradient(to right, #1a2e1a, #2a402a, #1a2e1a);
    border-radius: 2px;
    transform: translateX(-50%);
    z-index: 1;
}

/* Leaves (Cladodes) - More leaves, darker */
.leaf {
    position: absolute;
    background-color: #0f2a0f;
    width: 20px;
    height: 50px;
    clip-path: polygon(50% 0%, 100% 80%, 50% 100%, 0% 80%);
    box-shadow: inset 3px 0 8px rgba(0,0,0,0.5), 2px 2px 4px rgba(0,0,0,0.3);
    transform-origin: bottom center;
    opacity: 0;
    animation: leafAppear 0.6s ease-out forwards;
}

@keyframes leafAppear {
    0% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}

.leaf::before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    width: 1px;
    height: 100%;
    background: rgba(255,255,255,0.03);
    transform: translateX(-50%);
}

/* Leaf Groups */
.leaf-group {
    position: absolute;
    left: 50%;
    width: 0; 
    height: 0;
}

.group-top { top: -2%; }
.group-mid-1 { top: 25%; }
.group-mid-2 { top: 45%; }

/* More leaves positioned around clusters */
.group-top .leaf:nth-child(1) { 
    transform: rotate(-60deg) translate(-10px, -10px); 
    height: 48px; 
    animation-delay: 0.8s;
}
.group-top .leaf:nth-child(2) { 
    transform: rotate(-30deg) translate(-5px, -15px); 
    height: 50px; 
    animation-delay: 0.9s;
}
.group-top .leaf:nth-child(3) { 
    transform: rotate(0deg) translate(0, -18px); 
    height: 52px; 
    animation-delay: 1s;
}
.group-top .leaf:nth-child(4) { 
    transform: rotate(30deg) translate(5px, -15px); 
    height: 50px; 
    animation-delay: 1.1s;
}
.group-top .leaf:nth-child(5) { 
    transform: rotate(60deg) translate(10px, -10px); 
    height: 48px; 
    animation-delay: 1.2s;
}
.group-top .leaf:nth-child(6) { 
    transform: rotate(-90deg) translate(-12px, 3px); 
    height: 45px; 
    animation-delay: 1.3s;
}
.group-top .leaf:nth-child(7) { 
    transform: rotate(90deg) translate(12px, 3px); 
    height: 45px; 
    animation-delay: 1.4s;
}
.group-top .leaf:nth-child(8) { 
    transform: rotate(-120deg) translate(-8px, 8px); 
    height: 42px; 
    animation-delay: 1.5s;
}

/* Mid leaves along stem */
.group-mid-1 .leaf:nth-child(1) { 
    transform: rotate(-45deg) translate(-8px, 0); 
    height: 40px; 
    animation-delay: 1.1s;
}
.group-mid-1 .leaf:nth-child(2) { 
    transform: rotate(45deg) translate(8px, 0); 
    height: 40px; 
    animation-delay: 1.2s;
}
.group-mid-1 .leaf:nth-child(3) { 
    transform: rotate(0deg) translate(0, -5px); 
    height: 38px; 
    animation-delay: 1.3s;
}

/* Second mid leaves */
.group-mid-2 .leaf:nth-child(1) { 
    transform: rotate(-50deg) translate(-7px, 0); 
    height: 38px; 
    animation-delay: 1.4s;
}
.group-mid-2 .leaf:nth-child(2) { 
    transform: rotate(50deg) translate(7px, 0); 
    height: 38px; 
    animation-delay: 1.5s;
}

/* Berry Clusters - One at the top of each stem */
.berry-cluster {
    position: absolute;
    width: 40px;
    height: 40px;
    z-index: 10;
    left: 50%;
    transform: translateX(-50%) scale(0);
    opacity: 0;
    animation: clusterAppear 0.8s ease-out forwards,
               clusterGlow 2s ease-in-out 2.5s infinite;
}

@keyframes clusterAppear {
    0% {
        opacity: 0;
        transform: translateX(-50%) scale(0) rotate(-180deg);
    }
    60% {
        opacity: 1;
        transform: translateX(-50%) scale(1.1) rotate(10deg);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) scale(1) rotate(0deg);
    }
}

@keyframes clusterGlow {
    0%, 100% { filter: brightness(1); }
    50% { filter: brightness(1.15); }
}

.cluster-top { 
    top: -5%; 
    animation-delay: 1.2s, 2.5s;
}
.cluster-mid { 
    top: 22%; 
    animation-delay: 1.5s, 2.5s;
}
.cluster-mid-2 { 
    top: 42%; 
    animation-delay: 1.7s, 2.5s;
}

.berry {
    position: absolute;
    width: 17px;
    height: 17px;
    background: radial-gradient(circle at 30% 30%, #ff4444, #cc0000, #800000);
    border-radius: 50%;
    box-shadow: 2px 2px 4px rgba(0,0,0,0.6), inset -2px -2px 3px rgba(0,0,0,0.3);
    animation: berryShine 3s ease-in-out 2.5s infinite;
}

@keyframes berryShine {
    0%, 100% { 
        box-shadow: 2px 2px 4px rgba(0,0,0,0.6), inset -2px -2px 3px rgba(0,0,0,0.3);
    }
    50% { 
        box-shadow: 2px 2px 6px rgba(255,100,100,0.4), inset -2px -2px 3px rgba(0,0,0,0.3);
    }
}

.berry::after {
    content: '';
    position: absolute;
    top: 3px;
    left: 4px;
    width: 6px;
    height: 5px;
    background: rgba(255, 255, 255, 0.7);
    border-radius: 50%;
    transform: rotate(-30deg);
    filter: blur(0.5px);
    animation: highlightMove 2s ease-in-out infinite;
}

@keyframes highlightMove {
    0%, 100% { opacity: 0.7; transform: rotate(-30deg) scale(1); }
    50% { opacity: 0.9; transform: rotate(-30deg) scale(1.1); }
}

/* Very tight berry packing - solid ball appearance */
.berry-cluster .berry:nth-child(1) { 
    top: 10px; 
    left: 10px; 
    z-index: 7; 
    width: 20px; 
    height: 20px; 
    animation-delay: 0s;
}

.berry-cluster .berry:nth-child(2) { top: 1px; left: 10px; z-index: 5; animation-delay: 0.1s; }
.berry-cluster .berry:nth-child(3) { top: 4px; left: 22px; z-index: 5; animation-delay: 0.2s; }
.berry-cluster .berry:nth-child(4) { top: 22px; left: 22px; z-index: 6; animation-delay: 0.3s; }
