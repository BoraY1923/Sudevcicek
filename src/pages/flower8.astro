<style>

body {
    margin: 0;
    padding: 0;
    background-color: #000000;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    overflow: hidden;
    font-family: sans-serif;
    position: relative;
}

.background-text {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 25vw;
    font-weight: 900;
    color: rgba(255, 255, 255, 0.05);
    letter-spacing: 0.1em;
    z-index: 0;
    filter: blur(8px);
    user-select: none;
    pointer-events: none;
    white-space: nowrap;
    font-family: 'Arial Black', 'Helvetica', sans-serif;
    text-transform: uppercase;
}

.container {
    position: relative;
    width: 100%;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
}

.bouquet {
    position: relative;
    width: 800px;
    height: 1100px;
}

/* Base Branch Styles */
.kokina-branch {
    position: absolute;
    bottom: 200px;
    left: 50%;
    width: 60px;
    height: 600px;
    transform-origin: bottom center;
    opacity: 0;
    animation: branchAppear 1.5s ease-out forwards;
}

/* Entrance animation */
@keyframes branchAppear {
    0% {
        opacity: 0;
        transform: translateX(-50%) translateY(50px) scale(0.3);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) translateY(0) scale(1);
    }
}

/* Center Branch - Longest, vertical */
.branch-center {
    transform: translateX(-50%);
    z-index: 7;
    height: 680px;
    animation: branchAppear 1.5s ease-out 0.1s forwards,
               branchSway 4s ease-in-out 2s infinite;
}

@keyframes branchSway {
    0%, 100% { transform: translateX(-50%) rotate(0deg); }
    25% { transform: translateX(-50%) rotate(0.5deg); }
    75% { transform: translateX(-50%) rotate(-0.5deg); }
}

.branch-center .stem-main {
    height: 630px;
}

/* Left Inner Branch */
.branch-left-inner {
    transform: translateX(-50%) translate(-12px, 0) rotate(-8deg);
    z-index: 6;
    bottom: 200px;
    height: 520px;
    animation: branchAppearLeft1 1.5s ease-out 0.2s forwards,
               branchSwayLeft1 4s ease-in-out 2.2s infinite;
}

@keyframes branchAppearLeft1 {
    0% {
        opacity: 0;
        transform: translateX(-50%) translate(-12px, 0) rotate(-8deg) translateY(50px) scale(0.3);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) translate(-12px, 0) rotate(-8deg) translateY(0) scale(1);
    }
}

@keyframes branchSwayLeft1 {
    0%, 100% { transform: translateX(-50%) translate(-12px, 0) rotate(-8deg); }
    25% { transform: translateX(-50%) translate(-12px, 0) rotate(-7.5deg); }
    75% { transform: translateX(-50%) translate(-12px, 0) rotate(-8.5deg); }
}

/* Left Middle Branch */
.branch-left-middle {
    transform: translateX(-50%) translate(-24px, 0) rotate(-15deg);
    z-index: 5;
    bottom: 200px;
    height: 480px;
    animation: branchAppearLeft2 1.5s ease-out 0.3s forwards,
               branchSwayLeft2 4s ease-in-out 2.3s infinite;
}

@keyframes branchAppearLeft2 {
    0% {
        opacity: 0;
        transform: translateX(-50%) translate(-24px, 0) rotate(-15deg) translateY(50px) scale(0.3);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) translate(-24px, 0) rotate(-15deg) translateY(0) scale(1);
    }
}

@keyframes branchSwayLeft2 {
    0%, 100% { transform: translateX(-50%) translate(-24px, 0) rotate(-15deg); }
    25% { transform: translateX(-50%) translate(-24px, 0) rotate(-14.5deg); }
    75% { transform: translateX(-50%) translate(-24px, 0) rotate(-15.5deg); }
}

/* Left Outer Branch */
.branch-left-outer {
    transform: translateX(-50%) translate(-38px, 0) rotate(-22deg);
    z-index: 4;
    bottom: 200px;
    height: 430px;
    animation: branchAppearLeft3 1.5s ease-out 0.4s forwards,
               branchSwayLeft3 4s ease-in-out 2.4s infinite;
}

@keyframes branchAppearLeft3 {
    0% {
        opacity: 0;
        transform: translateX(-50%) translate(-38px, 0) rotate(-22deg) translateY(50px) scale(0.3);
    }
    100% {
        opacity: 1;
        transform: translateX(-50%) translate(-38px, 0) rotate(-22deg) translateY(0) scale(1);
    }
}

@keyframes branchSwayLeft3 {
    0%, 100% { transform: translateX(-50%) translate(-38px, 0) rotate(-22deg); }
    25% { transform: translateX(-50%) translate(-38px, 0) rotate(-21.5deg); }
    75% { transform: translateX(-50%) translate(-38px, 0) rotate(-22.5deg); }
}

/* Right Inner Branch */
.branch-right-inner {
    transform: translateX(-50%) translate(12px, 0) rotate(8deg);
    z-index: 3;
    bottom: 200px;
    height: 520px;
    animation: branchAppearRight1 1.5s ease-out 0.25s forwards,
